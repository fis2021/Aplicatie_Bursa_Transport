<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="400" prefWidth="600" style="-fx-background-color: darkslategrey;" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.app.transport.controllers.RegisterController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" fill="#f8f3f3" text="Create an account!" GridPane.columnIndex="1" GridPane.columnSpan="2" />

    <Label text="Username:" textFill="#f8f5f5" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="usernameField" id="usernameField" style="-fx-background-color: darkseagreen;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Password:" textFill="#f2eded" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <PasswordField fx:id="passwordField" id="passwordField" style="-fx-background-color: darkseagreen;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Role:" textFill="#fffbfb" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <ChoiceBox fx:id="role" id="role" prefWidth="150.0" style="-fx-background-color: darkseagreen;" GridPane.columnIndex="1" GridPane.rowIndex="3">
    </ChoiceBox>

    <Text fx:id="registrationMessage" id="registrationMessage" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
      <Button fx:id="button2" mnemonicParsing="false" onMouseClicked="#handle2" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: indianred;" text="Back" textFill="#fffdfd" />
        <Button onAction="#handleRegisterAction" id="registerButton" style="-fx-background-color: steelblue;" text="Register" textFill="#fcf9f9" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints maxHeight="17.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="25.0" minHeight="8.0" prefHeight="25.0" />
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="16.0" minHeight="16.0" prefHeight="16.0" />
   </rowConstraints>
</GridPane>
